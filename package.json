{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true npm run build",
    "build": "npm run create-placeholders && next build",
    "create-placeholders": "node ./scripts/create-placeholders.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "dev": "npm run create-placeholders && next dev",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,scss,md}\"",
    "lint:scss": "stylelint '**/*.scss'",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "majestic": "EDITOR=code majestic",
    "posttest": "npm run format",
    "prepare": "husky install",
    "pretest": "npm run lint:scss && npm run lint",
    "start": "next start",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:mutate": "npx stryker run",
    "test:mutate-file": "npx stryker run --concurrency 1 --reporters clear-text,progress-append-only,html --mutate \"**/$FILE_NAME*.tsx,!**/*@(.data|.test|.spec|Spec|.stories).ts?(x)\""
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.8.0",
    "canvas": "2.8.0",
    "gray-matter": "^4.0.3",
    "next": "11.1.2",
    "next-themes": "^0.0.15",
    "preact": "^10.5.15",
    "prismjs": "^1.25.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rehype-highlight": "^5.0.0",
    "rehype-parse": "^8.0.3",
    "rehype-react": "^7.0.3",
    "rehype-stringify": "^9.0.2",
    "remark": "^14.0.1",
    "remark-parse": "^10.0.0",
    "remark-rehype": "^10.0.0",
    "sass": "^1.42.1",
    "unified": "^10.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^11.1.2",
    "@plaiceholder/base64": "^1.0.0",
    "@stryker-mutator/core": "^5.4.1",
    "@stryker-mutator/jest-runner": "^5.4.1",
    "@testing-library/dom": "^8.9.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.3.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "axe-core": "^4.3.3",
    "cypress": "^8.6.0",
    "cypress-axe": "^0.13.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-jsdoc": "^15.4.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^6.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^36.1.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "image-size": "^1.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "majestic": "^1.8.1",
    "next-compose-plugins": "^2.2.1",
    "prettier": "^2.4.1",
    "sharp": "^0.29.1",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^9.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.scss": "stylelint --fix",
    "*.{ts,tsx,scss,md}": "prettier --write"
  }
}
