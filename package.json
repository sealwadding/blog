{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "pretest": "npm run lint:scss && npm run lint",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,scss,md}\"",
    "posttest": "npm run format",
    "lint:scss": "stylelint '**/*.scss'",
    "prepare": "husky install"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "10.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-prism": "^1.3.6",
    "sass": "^1.32.13"
  },
  "devDependencies": {
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.scss": "stylelint --fix",
    "*.{ts,tsx,scss,md}": "prettier --write"
  }
}
